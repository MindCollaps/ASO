<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <title>User info</title>
    <!-- Meta Tags -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Copyright -->
    <meta name="author" content="Noah Elijah Till"/>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ"
          crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
            crossorigin="anonymous"></script>
    <!-- Google Icons -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
          rel="stylesheet">
    <!-- Vue -->
    <script src="https://cdn.jsdelivr.net/npm/vue@2" crossorigin="anonymous"></script>
</head>
<body>

<script>
</script>

<div id="manager" class="container">
    <div v-if="showModal">
        <div class="modal-content rounded-4 shadow">
            <div class="modal-body p-5">
                <h2 class="fw-bold mb-0">Add group</h2>
                <ul class="d-grid gap-4 my-5 list-unstyled small">
                    <li class="d-flex gap-4" v-for="grp in groups">
                        <div>
                            <h5 class="mb-0">{grp.name}</h5>
                            <p>{grp.date ? 'Created: ' + grp.date : 'No date'}</p>
                            <p>{grp.dateExpires ? 'Expires: ' + grp.dateExpires : 'Does not expire}</p>
                            <button class="btn btn-primary" @click="addToGroup({grp.id})">Add</button>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <button class="btn btn-danger" onclick="window.location.href = '/manager'">Back</button>
    <div class="row">
        <div class="col">
            <h1>User Info</h1>
            <h2>Git Username: {{.GitName}}</h2>
            <h2>User ID: {{.ID}}</h2>
            <h2>Git User ID: {{.GitID}}</h2>
            <h2>Created: {{.Date}}</h2>
            <h2>Expires: {{.DateExpires}}</h2>
            <h2>Group:</h2>
            {{if .User.Group}}
                <div class="column">
                    <h2>Group Name: {{.Group.Name}}</h2>
                    <h2>Group ID: {{.Group.ID}}</h2>
                    <h2>Created: {{.Group.Date}}</h2>
                    <h2>Expires: {{.Group.DateExpires}}</h2>
                    <button class="btn btn-danger" @click="removeFromGroup()">Remove from Group</button>
                </div>
            {{else}}
                <h2>None</h2>
                <button class="btn btn-primary" @click="addGroup()">Add to Group</button>
            {{end}}
        </div>
    </div>
</div>

<script>
    let manager = new Vue({
        el: '#manager',
        methods: {
            removeFromGroup: async function () {
                let data = {
                    user: '{{.ID}}',
                    group: '{{.Group.ID}}',
                    groups: [],
                    showModal: false
                }
                fetch('/manager/group/user/remove', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(data),
                }).then(response => {
                    if (response.status === 200) {
                        window.location.reload();
                    }
                })
            },
            infoUser: async function (id) {
                window.location.href = '/manager/user/' + id;
            },
            addGroup: async function () {
                //fetch all groups and show im modal
                let res = await fetch('/manager/group/all').then(response => response.json());
                //show modal

                if(res.status !== 200) {
                    //show error in dialog
                    alert(res.message);
                    return;
                }

                this.groups = res.groups;
                this.showModal = true;
            },
            addToGroup: async function (id) {
                let data = {
                    user: {{.ID}},
                    group: id,
                }
                fetch('/manager/group/user', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(data),
                }).then(response => {
                    if (response.status === 200) {
                        window.location.reload();
                    }
                })
            }
        },
    });
</script>
</body>
</html>
