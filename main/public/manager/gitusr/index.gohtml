<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <title>User info</title>
    <!-- Meta Tags -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Copyright -->
    <meta name="author" content="Noah Elijah Till"/>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ"
          crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
            crossorigin="anonymous"></script>
    <!-- Google Icons -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
          rel="stylesheet">
    <!-- Vue -->
    <script src="https://cdn.jsdelivr.net/npm/vue@2" crossorigin="anonymous"></script>
</head>
<body>

<div id="manager" class="container">
    <div class="modal fade" id="activationModel" tabindex="-1" aria-labelledby="activationModel">
        <div class="modal-dialog">
            <div class="modal-content rounded-4 shadow">
                <div class="modal-header border-bottom-0">
                    <div class="w-100 d-flex justify-content-center">
                        <h1 class="modal-title text-light fs-5">Add User to Group</h1>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                            aria-label="Close"></button>
                </div>
                <div class="modal-body py-0 text-body-emphasis">
                    {{if .Groups}}
                        <h2 class="fw-bold mb-0">Add group</h2>
                        <ul class="d-grid gap-4 my-5 list-unstyled small">
                            {{range .Groups}}
                                <li class="d-flex gap-4">
                                    <div>
                                        <h5 class="mb-0">{{.Name}}</h5>
                                        <p>Created: {{.Date}}</p>
                                        <p>Expires: {{.DateExpires}}</p>
                                        <button class="btn btn-primary" @click="addToGroup('{{.ID}}')">Add</button>
                                    </div>
                                </li>
                            {{end}}
                        </ul>
                    {{else}}
                        <h2>There are no groups!</h2>
                    {{end}}
                </div>
            </div>
        </div>
    </div>
    <script>
        const myModal = new bootstrap.Modal(document.getElementById('activationModel'), {})
    </script>
    <div class="d-flex flex-row align-items-center mt-5">
        <h1 class="flex-grow-1 text-white">User Info</h1>
        <button class="btn btn-danger pl-2 h-50" onclick="window.location.href = '/manager?a=git'">Back</button>
    </div>
    <div class="row container bg-body-secondary rounded-3 shadow p-3">
        <div class="col">
            <h2>Git Username: {{.GitHubUsername}}</h2>
            <h2>User ID: {{.ID}}</h2>
            <h2>Created: {{.DateCreated}}</h2>
            <h2>Expires: {{.DateExpires}}</h2>
            <h2>Expiry by Group: {{.ExpiryByGroup}}</h2>
            <h2>Group:</h2>
            {{if .UserGroup.Name}}
                <div class="column">
                    <h3>Group Name: {{.UserGroup.Name}}</h3>
                    <h3>Group ID: {{.UserGroup.ID}}</h3>
                    <h3>Created: {{.UserGroup.Date}}</h3>
                    <h3>Expires: {{.UserGroup.DateExpires}}</h3>
                    <button class="btn btn-danger" @click="removeFromGroup()">Remove from Group</button>
                </div>
            {{else}}
                <h2>None</h2>
                <button class="btn btn-primary" @click="addGroup()">Add to a Group</button>
            {{end}}
            <br>
            <h1>Management</h1>
            <button class="btn btn-danger" @click="deleteUser()">Delete User</button>
        </div>
    </div>
</div>

<script>
    let manager = new Vue({
        el: '#manager',
        data: {
            user: '{{.ID}}',
            group: '{{.UserGroup.ID}}',
            groups: [],
        },
        methods: {
            deleteUser: async function () {
                //confirm delete
                if (!confirm("Are you sure you want to delete this user?")) {
                    return
                }
                //delete user
                let res = await fetch("/manager/gitusr/" + '{{.ID}}', {
                    method: "DELETE"
                })
                if (res.status === 200) {
                    //reload page
                    document.location.href = "/manager"
                } else {
                    //error
                    alert("Error deleting user")
                }
            },
            removeFromGroup: async function () {
                fetch('/manager/group/' + this.group + '/user/remove/' + this.user, {
                    method: 'GET',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                }).then(response => {
                    if (response.status === 200) {
                        window.location.reload();
                    }
                })
            },
            addGroup: async function () {
                myModal.show()
            },
            addToGroup: async function (id) {
                fetch('/manager/group/' + id + '/user/' + this.user, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                }).then(response => {
                    if (response.status === 200) {
                        window.location.reload();
                    }
                })
            }
        },
    });
</script>
</body>
</html>
